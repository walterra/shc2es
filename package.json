{
  "name": "bosch-smart-home",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Walter M. Rafelsberger <walter@rafelsberger.at>",
  "license": "MIT",
  "scripts": {
    "poll": "OTEL_SERVICE_NAME=bosch-smart-home-poll node --require @elastic/opentelemetry-node --require ts-node/register src/poll.ts",
    "poll:no-otel": "ts-node src/poll.ts",
    "logs": "cat logs/poll-$(date +%Y-%m-%d).log | yarn pino-pretty",
    "logs:tail": "tail -f logs/poll-$(date +%Y-%m-%d).log | yarn pino-pretty",
    "logs:errors": "cat logs/poll-$(date +%Y-%m-%d).log | grep -E '\"level\":(40|50|60)' | yarn pino-pretty",
    "logs:raw": "cat logs/poll-$(date +%Y-%m-%d).log",
    "logs:raw:tail": "tail -f logs/poll-$(date +%Y-%m-%d).log",
    "data": "tail -20 data/events-$(date +%Y-%m-%d).ndjson",
    "data:tail": "tail -f data/events-$(date +%Y-%m-%d).ndjson",
    "ingest:setup": "OTEL_SERVICE_NAME=bosch-smart-home-ingest node --require @elastic/opentelemetry-node --require ts-node/register src/ingest.ts --setup",
    "ingest": "OTEL_SERVICE_NAME=bosch-smart-home-ingest node --require @elastic/opentelemetry-node --require ts-node/register src/ingest.ts",
    "ingest:watch": "OTEL_SERVICE_NAME=bosch-smart-home-ingest node --require @elastic/opentelemetry-node --require ts-node/register src/ingest.ts --watch",
    "registry": "OTEL_SERVICE_NAME=bosch-smart-home-registry node --require @elastic/opentelemetry-node --require ts-node/register src/fetch-registry.ts",
    "dashboard:export": "OTEL_SERVICE_NAME=bosch-smart-home-dashboard node --require @elastic/opentelemetry-node --require ts-node/register src/export-dashboard.ts",
    "otel:collector": "docker run --rm -p 4317:4317 -p 4318:4318 --env-file .env -v $(pwd)/otel-collector-config.yml:/etc/otel-collector/config.yaml elastic/elastic-agent:9.2.2 otel --config /etc/otel-collector/config.yaml",
    "otel:collector:start": "docker compose -f docker-compose.otel.yml up -d",
    "otel:collector:stop": "docker compose -f docker-compose.otel.yml down",
    "otel:collector:logs": "docker compose -f docker-compose.otel.yml logs -f"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^9.2.0",
    "@elastic/opentelemetry-node": "^1.7.0",
    "@opentelemetry/api": "^1.9.0",
    "bosch-smart-home-bridge": "^1.7.47",
    "chokidar": "^5.0.0",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "pino": "^10.1.0",
    "pino-opentelemetry-transport": "^2.0.0",
    "split2": "^4.2.0",
    "tail": "^2.2.6"
  },
  "devDependencies": {
    "@types/node": "^24.10.2",
    "@types/split2": "^4.2.3",
    "@types/tail": "^2.2.3",
    "pino-pretty": "^13.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
