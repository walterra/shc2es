{
  "name": "shc2es",
  "version": "0.4.1",
  "description": "CLI tools to collect, store, and visualize Bosch Smart Home Controller II data with Elasticsearch and Kibana",
  "keywords": [
    "smart-home",
    "bosch",
    "elasticsearch",
    "kibana",
    "iot",
    "home-automation",
    "ndjson"
  ],
  "bin": {
    "shc2es": "dist/cli.js"
  },
  "files": [
    "dist",
    "docs",
    "dashboards",
    "README.md",
    "LICENSE"
  ],
  "author": "Walter M. Rafelsberger <walter@rafelsberger.at>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/walterra/shc2es.git"
  },
  "bugs": {
    "url": "https://github.com/walterra/shc2es/issues"
  },
  "homepage": "https://github.com/walterra/shc2es#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest --config jest.config.unit.js",
    "test:unit": "jest --config jest.config.unit.js",
    "test:e2e": "jest --config jest.config.e2e.js",
    "test:all": "yarn test:unit && yarn test:e2e",
    "test:watch": "jest --config jest.config.unit.js --watch",
    "test:coverage": "jest --config jest.config.unit.js --coverage",
    "test:ci": "jest --config jest.config.unit.js --ci --coverage --maxWorkers=2",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts' 'tests/**/*.json' 'tests/**/*.md'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts' 'tests/**/*.json' 'tests/**/*.md'",
    "precommit": "lint-staged",
    "mermaid:validate": "node scripts/validate-mermaid.js",
    "prepublishOnly": "yarn build && yarn tsc --noEmit",
    "changeset": "changeset",
    "version-packages": "changeset version && rm -f spec/todos/done/*.md",
    "release": "yarn build && changeset publish",
    "poll": "ts-node src/cli.ts poll",
    "poll:no-otel": "ts-node src/cli.ts poll --no-otel",
    "ingest": "ts-node src/cli.ts ingest",
    "ingest:setup": "ts-node src/cli.ts ingest --setup",
    "ingest:watch": "ts-node src/cli.ts ingest --watch",
    "registry": "ts-node src/cli.ts registry",
    "dashboard:export": "ts-node src/cli.ts dashboard",
    "logs": "cat ~/.shc2es/logs/poll-$(date +%Y-%m-%d).log | yarn pino-pretty",
    "logs:tail": "tail -f ~/.shc2es/logs/poll-$(date +%Y-%m-%d).log | yarn pino-pretty",
    "logs:errors": "cat ~/.shc2es/logs/poll-$(date +%Y-%m-%d).log | grep -E '\"level\":(40|50|60)' | yarn pino-pretty",
    "logs:raw": "cat ~/.shc2es/logs/poll-$(date +%Y-%m-%d).log",
    "logs:raw:tail": "tail -f ~/.shc2es/logs/poll-$(date +%Y-%m-%d).log",
    "data": "tail -20 ~/.shc2es/data/events-$(date +%Y-%m-%d).ndjson",
    "data:tail": "tail -f ~/.shc2es/data/events-$(date +%Y-%m-%d).ndjson",
    "otel:collector": "docker run --rm -p 4317:4317 -p 4318:4318 --env-file .env -v $(pwd)/otel-collector-config.yml:/etc/otel-collector/config.yaml elastic/elastic-agent:9.2.2 otel --config /etc/otel-collector/config.yaml",
    "otel:collector:start": "docker compose -f docker-compose.otel.yml up -d",
    "otel:collector:stop": "docker compose -f docker-compose.otel.yml down",
    "otel:collector:logs": "docker compose -f docker-compose.otel.yml logs -f",
    "es-dev:install": "curl -fsSL https://elastic.co/start-local | sh",
    "es-dev:start": "cd elastic-start-local && docker compose up -d",
    "es-dev:stop": "cd elastic-start-local && docker compose stop",
    "es-dev:down": "cd elastic-start-local && docker compose down",
    "es-dev:logs": "cd elastic-start-local && docker compose logs -f",
    "prepare": "husky"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^9.2.0",
    "@elastic/opentelemetry-node": "^1.7.0",
    "@opentelemetry/api": "^1.9.0",
    "bosch-smart-home-bridge": "^1.7.47",
    "chokidar": "^5.0.0",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "neverthrow": "^8.2.0",
    "pino": "^10.1.0",
    "pino-opentelemetry-transport": "^2.0.0",
    "pino-pretty": "^13.1.3",
    "split2": "^4.2.0",
    "tail": "^2.2.6",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@jest/globals": "^30.2.0",
    "@testcontainers/elasticsearch": "^11.10.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.2",
    "@types/split2": "^4.2.3",
    "@types/tail": "^2.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^61.5.0",
    "express": "^5.2.1",
    "fast-check": "^4.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "testcontainers": "^11.10.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
