{
  "name": "shc2es",
  "version": "0.1.0",
  "description": "CLI tools to collect, store, and visualize Bosch Smart Home Controller II data with Elasticsearch and Kibana",
  "keywords": [
    "smart-home",
    "bosch",
    "elasticsearch",
    "kibana",
    "iot",
    "home-automation",
    "ndjson"
  ],
  "bin": {
    "shc2es": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "author": "Walter M. Rafelsberger <walter@rafelsberger.at>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/walterra/shc2es.git"
  },
  "bugs": {
    "url": "https://github.com/walterra/shc2es/issues"
  },
  "homepage": "https://github.com/walterra/shc2es#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "yarn build && yarn tsc --noEmit",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "yarn build && changeset publish",
    "poll": "ts-node src/cli.ts poll",
    "poll:no-otel": "ts-node src/cli.ts poll --no-otel",
    "ingest": "ts-node src/cli.ts ingest",
    "ingest:setup": "ts-node src/cli.ts ingest --setup",
    "ingest:watch": "ts-node src/cli.ts ingest --watch",
    "registry": "ts-node src/cli.ts registry",
    "dashboard:export": "ts-node src/cli.ts dashboard",
    "logs": "cat logs/poll-$(date +%Y-%m-%d).log | yarn pino-pretty",
    "logs:tail": "tail -f logs/poll-$(date +%Y-%m-%d).log | yarn pino-pretty",
    "logs:errors": "cat logs/poll-$(date +%Y-%m-%d).log | grep -E '\"level\":(40|50|60)' | yarn pino-pretty",
    "logs:raw": "cat logs/poll-$(date +%Y-%m-%d).log",
    "logs:raw:tail": "tail -f logs/poll-$(date +%Y-%m-%d).log",
    "data": "tail -20 data/events-$(date +%Y-%m-%d).ndjson",
    "data:tail": "tail -f data/events-$(date +%Y-%m-%d).ndjson",
    "otel:collector": "docker run --rm -p 4317:4317 -p 4318:4318 --env-file .env -v $(pwd)/otel-collector-config.yml:/etc/otel-collector/config.yaml elastic/elastic-agent:9.2.2 otel --config /etc/otel-collector/config.yaml",
    "otel:collector:start": "docker compose -f docker-compose.otel.yml up -d",
    "otel:collector:stop": "docker compose -f docker-compose.otel.yml down",
    "otel:collector:logs": "docker compose -f docker-compose.otel.yml logs -f"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^9.2.0",
    "@elastic/opentelemetry-node": "^1.7.0",
    "@opentelemetry/api": "^1.9.0",
    "bosch-smart-home-bridge": "^1.7.47",
    "chokidar": "^5.0.0",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "pino": "^10.1.0",
    "pino-opentelemetry-transport": "^2.0.0",
    "split2": "^4.2.0",
    "tail": "^2.2.6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^24.10.2",
    "@types/split2": "^4.2.3",
    "@types/tail": "^2.2.3",
    "pino-pretty": "^13.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
